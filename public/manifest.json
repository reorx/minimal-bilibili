{
  "manifest_version": 3,
  "name": "Minimal Bilibili",
  "description": "Make Bilibili more minimalistic",
  "version": "1.2.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bilibili.com/"],
      "css": ["css/content_style.css"],
      "js": ["js/content_script.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ]
}
